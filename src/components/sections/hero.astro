---
import { AnimateIn } from "@/components/ui/animate-in";
import ArrowDown from "@lucide/astro/icons/arrow-down";
import { getEntry } from "astro:content";
import ScrollButton from "@/components/scroll-button";
import HeroAnimatedCircles from "../hero-animated-circles/hero-animated-circles";

const heroData = await getEntry("hero", "hero");

const { Content } = await heroData!.render();
const data = heroData!.data;
---

<section id="hero" class="mesh-bg relative flex min-h-screen items-center px-6">
  <HeroAnimatedCircles client:idle />

  <div class="relative mx-auto w-full max-w-6xl">
    <AnimateIn delay={100} client:idle>
      <p
        class="border-primary/30 bg-primary/5 text-primary mb-4 inline-block rounded-full border px-4 py-1.5 font-mono text-sm md:text-base"
      >
        {data.badge}
      </p>
    </AnimateIn>

    <AnimateIn delay={200} client:idle>
      <h1
        class="gradient-text text-5xl leading-tight font-bold tracking-tight sm:text-6xl md:text-8xl"
      >
        {data.heading}
      </h1>
    </AnimateIn>

    <AnimateIn delay={300} client:idle>
      <h2
        class="text-foreground/70 mt-2 text-3xl leading-tight font-bold tracking-tight sm:text-4xl md:text-6xl"
      >
        {data.subheading}
      </h2>
    </AnimateIn>

    <AnimateIn delay={400} client:idle>
      <div
        class="text-muted-foreground mt-6 max-w-xl text-base leading-relaxed md:max-w-2xl md:text-lg"
      >
        <Content />
      </div>
    </AnimateIn>

    <AnimateIn delay={500} client:idle>
      <ScrollButton
        scrollTo="#about"
        className="glow-green border-primary/40 bg-primary/10 text-primary hover:border-primary/60 hover:bg-primary/20 mt-10 inline-flex items-center gap-2 rounded-xl border px-7 py-3.5 font-mono text-sm transition-all"
        client:load
      >
        {data.ctaText}
        <ArrowDown class="h-4 w-4" />
      </ScrollButton>
    </AnimateIn>
  </div>
</section>
