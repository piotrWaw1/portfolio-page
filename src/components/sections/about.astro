---
import { AnimateIn } from "@/components/ui/animate-in";
import { getEntry } from "astro:content";

// const skills = [
//   { name: "JavaScript (ES6+)", color: "text-amber" },
//   { name: "TypeScript", color: "text-blue" },
//   { name: "React", color: "text-cyan" },
//   { name: "Next.js", color: "text-foreground" },
//   { name: "Tailwind CSS", color: "text-cyan" },
//   { name: "Node.js", color: "text-primary" },
//   { name: "GraphQL", color: "text-accent" },
//   { name: "Figma", color: "text-rose" },
// ];

const aboutData = await getEntry("about", "about");
const { Content } = await aboutData!.render();
const data = aboutData!.data;
---

<section id="about" class="px-6 py-24 md:py-32">
  <div class="mx-auto max-w-6xl">
    <AnimateIn client:visible>
      <div class="mb-12 flex items-center gap-4">
        <h2
          class="text-foreground flex items-center gap-2 text-2xl font-bold md:text-3xl"
        >
          <span class="text-primary font-mono text-lg md:text-xl"> 01. </span>
          {data.title}
        </h2>
        <div
          class="from-primary/40 h-px flex-1 bg-gradient-to-r to-transparent"
        >
        </div>
      </div>
    </AnimateIn>

    <div class="grid gap-12 md:grid-cols-5">
      <div class="md:col-span-3">
        <AnimateIn delay={200} client:visible>
          <div class="text-muted-foreground mb-4 leading-relaxed">
            <Content />
          </div>
        </AnimateIn>

        <AnimateIn delay={300} client:visible>
          <div class="text-muted-foreground mb-8 leading-relaxed">
            {data.skillsTitle}
          </div>
        </AnimateIn>

        <AnimateIn delay={400} client:visible>
          <ul class="grid grid-cols-2 gap-x-8 gap-y-3">
            {
              data.skills.map((skill) => (
                <li class="text-muted-foreground flex items-center gap-2 font-mono text-sm">
                  <span class={skill.color}>{">"}</span>
                  <span class="hover:text-foreground transition-colors">
                    {skill.title}
                  </span>
                </li>
              ))
            }
          </ul>
        </AnimateIn>
      </div>

      <div class="md:col-span-2">
        <AnimateIn delay={200} direction="right" client:visible>
          <div class="group relative mx-auto w-full max-w-xs">
            <div
              class="from-primary/20 via-accent/10 to-cyan/20 relative overflow-hidden rounded-xl bg-gradient-to-br"
            >
              <div class="bg-secondary/30 aspect-square"></div>
              <div
                class="from-primary/20 to-accent/20 absolute inset-0 bg-gradient-to-br via-transparent transition-opacity group-hover:opacity-0"
              >
              </div>
            </div>
            <div
              class="border-accent/50 group-hover:border-primary/50 absolute -right-3 -bottom-3 -z-10 h-full w-full rounded-xl border-2 transition-all group-hover:-right-4 group-hover:-bottom-4"
            >
            </div>
          </div>
        </AnimateIn>
      </div>
    </div>
  </div>
</section>
